@using Microsoft.AspNetCore.Mvc.RazorPages

<div class="text-center " style="color: #9370db;">
    @if (Model.Characters.Info != null)
    {
        @if (!String.IsNullOrEmpty(Model.Characters.Info.PrevPage))
        {
            <a style="text-decoration: none;" asp-route-pageNo="@Model.Characters.Info.PrevPage">
                <b class="pe-2" >
                    <img width="30" height="34" src="https://img.icons8.com/fluency/48/long-arrow-left.png" alt="long-arrow-left"/>
                </b>
            </a>
        }
        @if (!String.IsNullOrEmpty(Model.Characters.Info.NextPage))
        {
            @for (int i = Convert.ToInt32(Model.Characters.Info.NextPage) - 5; 
                  i <= Convert.ToInt32(Model.Characters.Info.NextPage) + 3;
                  i++)
            {
                @if (i <= Convert.ToInt32(Model.Characters.Info.Pages))
                {
                    @if (i < 1)
                    {
                        //I DID THIS TO CENTER THE ACTIVE PAGE AND AVOID NEGATIVE NUMBERS
                        i += i * (-1);
                    }
                    else if(i == Convert.ToInt32(Model.Characters.Info.NextPage) - 1)
                    {
                        <b class="pagination-active">@i</b>
                    }
                    else
                    {
                        <a asp-route-pageNo="@i"><b>@i</b></a>
                    }                        
                }
                else
                {
                    break;
                }
            }
            <a style="text-decoration: none;" asp-route-pageNo="@Model.Characters.Info.NextPage">
                <b class="ps-2">
                    <img width="30" height="34" src="https://img.icons8.com/fluency/48/long-arrow-right.png" alt="long-arrow-right"/>
                </b>
            </a>
        }
    }
</div>